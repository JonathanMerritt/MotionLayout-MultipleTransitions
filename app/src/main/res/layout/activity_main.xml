<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activityMain_motion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSurface"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity">

  <FrameLayout
      android:id="@+id/activityMain_drawer"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:background="@color/colorSurfaceDark"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@id/activityMain_drawer_guide"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintWidth_percent="@dimen/width_drawer" />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/activityMain_drawer_guide"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.000" />

  <View
      android:id="@+id/activityMain_drawer_handle"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginStart="40dp"
      android:background="@color/colorPrimaryDarkTranslucent"
      android:visibility="visible"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@id/activityMain_drawer_guide"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintWidth_percent="@dimen/width_first_drawer_handle" />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/activityMain_sheet_guide"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="1.000" />

  <View
      android:id="@+id/activityMain_sheet_handle"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:background="@color/colorPrimaryDarkTranslucent"
      android:visibility="visible"
      app:layout_constraintBottom_toTopOf="@id/activityMain_sheet_guide"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHeight_percent="0.000"
      app:layout_constraintStart_toStartOf="parent" />

  <FrameLayout
      android:id="@+id/activityMain_sheet"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:background="@color/colorSurfaceDark"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHeight_percent="@dimen/height_sheet"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/activityMain_sheet_guide" />

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/activityMain_to_first"
      style="@style/Widget.MaterialComponents.Button.TextButton"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:alpha="0"
      android:text="@string/title_to_first"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHeight_percent="0.000"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@id/activityMain_to_second"
      app:layout_constraintWidth_percent="@dimen/width_button" />

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/activityMain_to_second"
      style="@style/Widget.MaterialComponents.Button.TextButton"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="@string/title_to_second"
      app:layout_constraintBottom_toTopOf="@id/activityMain_to_drawer"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_chainStyle="packed"
      app:layout_constraintWidth_percent="@dimen/width_button" />

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/activityMain_to_drawer"
      style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="@string/title_to_drawer"
      app:layout_constraintBottom_toTopOf="@id/activityMain_to_sheet"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/activityMain_to_second"
      app:layout_constraintWidth_percent="@dimen/width_button" />

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/activityMain_to_sheet"
      style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="@string/title_to_sheet"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/activityMain_to_drawer"
      app:layout_constraintWidth_percent="@dimen/width_button" />

</androidx.constraintlayout.motion.widget.MotionLayout>
